---
/**
 * Página del cotizador
 * Permite crear nuevas cotizaciones
 */
import Layout from '../components/Layout';
import QueryProvider from '../components/QueryProvider';
import Cotizador from '../components/Cotizador';
import { obtenerUsuarioActual } from '../services/auth.service';

// Verificar autenticación
const usuario = await obtenerUsuarioActual();
if (!usuario) {
  return Astro.redirect('/');
}
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Nueva Cotización - Mueblería Cotizador</title>
  </head>
  <body>
    <Layout client:load currentPath="/cotizador">
      <QueryProvider client:only="react">
        <Cotizador />
      </QueryProvider>
    </Layout>
  </body>
</html>


