---
/**
 * Página de Liquidaciones
 * Solo accesible para administradores
 */
import Layout from '../components/Layout';
import QueryProvider from '../components/QueryProvider';
import LiquidacionesPage from '../components/LiquidacionesPage';
import { obtenerUsuarioActual } from '../services/auth.service';

// Verificar autenticación
let usuario = null;
try {
  usuario = await obtenerUsuarioActual();
} catch (error) {
  console.error('Error al verificar usuario en liquidaciones (servidor):', error);
}
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Liquidaciones - Cotizador</title>
  </head>
  <body>
    <Layout client:load currentPath="/liquidaciones">
      <QueryProvider client:load>
        <LiquidacionesPage client:only="react" />
      </QueryProvider>
    </Layout>
  </body>
</html>
