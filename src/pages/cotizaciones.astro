---
/**
 * Página de listado de cotizaciones
 * Muestra todas las cotizaciones (admin) o solo las del usuario (técnico)
 */
import Layout from '../components/Layout';
import QueryProvider from '../components/QueryProvider';
import CotizacionesPage from '../components/CotizacionesPage';
import { obtenerUsuarioActual } from '../services/auth.service';

// Verificar autenticación
const usuario = await obtenerUsuarioActual();
if (!usuario) {
  return Astro.redirect('/');
}
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Cotizaciones - Mueblería Cotizador</title>
  </head>
  <body>
    <Layout client:load currentPath="/cotizaciones">
      <QueryProvider client:only="react">
        <CotizacionesPage usuario={usuario} />
      </QueryProvider>
    </Layout>
  </body>
</html>


