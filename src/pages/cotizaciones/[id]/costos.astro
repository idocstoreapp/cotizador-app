---
/**
 * Página de Control de Costos de un proyecto
 */
import Layout from '../../../components/Layout';
import ControlCostosPage from '../../../components/ControlCostosPage';
import { obtenerUsuarioActual } from '../../../services/auth.service';

// Obtener ID de la cotización desde la URL
const { id } = Astro.params;

let usuario = null;
try {
  usuario = await obtenerUsuarioActual();
} catch (error) {
  console.error('Error al verificar usuario en costos (servidor):', error);
}
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Control de Costos - Proyecto {id}</title>
  </head>
  <body>
    <Layout client:load currentPath="/cotizaciones">
      <ControlCostosPage client:only="react" cotizacionId={id || ''} />
    </Layout>
  </body>
</html>
